{
  "name": "hyper-editor",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "storybook": "yarn client storybook",
    "build": "yarn client build",
    "client": "cd packages/client && yarn",
    "service": "cd packages/service && yarn",
    "format:base": "prettier packages/*/src/** packages/*/package.json tsconfig.json",
    "format": "yarn format:base -w",
    "format:check": "yarn format:base --check"
  }
}
